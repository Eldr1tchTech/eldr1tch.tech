{# views/partials/service-card.njk #}
<div class="service-card" hx-get="{{ service.path }}" hx-push-url="true">
    <div class="service-image">
        <img src="{{ service.image }}" alt="{{ service.name }}">
    </div>
    <div class="service-info">
        <h3>{{ service.name }}</h3>
    </div>
</div>